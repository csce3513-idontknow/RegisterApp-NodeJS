<html>

<head>
	<title>Register - Transaction Page</title>
	<meta name="viewport" content="width=device-width, initial-scale=1"> 

	<link rel="stylesheet" type="text/css" href="/styles/master.css">
	<link rel="stylesheet" type="text/css" href="/styles/transaction.css">

	<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
	
	<script type="text/javascript" src="/scripts/master.js" defer></script>
	<script type="text/javascript" src="/scripts/transaction.js" defer></script>
</head>

<body>

	<div class="header">
		<h1 class="primary-message">Transaction</h1>
	</div>
		
	<div id="main" class="main">
		<div id="error" <% if (!locals.errorMessage || (locals.errorMessage === "")) { %> class="hidden" <% } %>>
			<h4 id="errorMessage" class="error-message">
				<% if (locals.errorMessage && (locals.errorMessage !== "")) { %>
					<%= locals.errorMessage %>
				<% } %>
			</h4>
		</div>

		<div class="mainMenuActionsWrapper">
			<div>

					<div class="row">
						<div class="column">
							<h2>Search for products</h2>
							<a>Add products to cart by clicking them</a>
							<br>
							<br>

							<div class="searchField">
								<input  class="searchBar" type="text" v-model="searchbox" placeholder="Type in name to search for"/>
								<button class="searchButton" v-on:click="search()"> search </button>
							</div>
							

							<table  id="productSearchResults">
								<tr>
								  <th>Lookup Code</th>
								  <th>Price in cents</th>
								  <th>Quantity in Stock</th>
								</tr>
								<tr v-for="product in searchResults" :key="product.id">
								  <td>{{product.lookupCode}}</td>
								  <td>{{product.price}}</td>
								  <td>{{product.count}}</td>
								</tr>
						
							  </table>

						</div>

						<div class="column">
							<h2>Cart</h2>
							<a>Click below to confirm or cancel transaction</a>

							<br>
							<br>
							
							<div class="searchField">
								<button id="deleteButton" type="button" class="searchButton">Confirm</button>
								<button id="saveButton" type="button" class="searchButton">Cancel</button>
							</div>

							<table  id="cart">
								
								<tr>
								  <th>Lookup Code</th>
								  <th>Price pr. product in cents</th>
								  <th>Quantity in cart</th>
								</tr>
								<tr v-for="product in cart" :key="product.id">
								  <td>{{product.lookupCode}}</td>
								  <td>{{product.price}}</td>
								  <td>{{product.count}}</td>
								  <td><button>remove from cart</button></td>
								</tr>
						
							  </table>
							
						</div>

					</div>

		
				
					
			</div>
		</div>
	</div>

	<div class="hidden">
		<input type="checkbox" id="isRefreshed" class="hidden">
		<script type="text/javascript">
			window.onunload = function() {
				const isRefreshedElement = document.getElementById("isRefreshed");

				if(!isRefreshedElement.checked) {
					isRefreshedElement.checked = true;
				} else {
					isRefreshedElement.checked = false;
					location.reload();
				}
			}
		</script>
	</div>

	<div class="footer">
		<img id="signOutImage" src="/images/Sign-Out.png" alt="Sign Out" class="footer" />
	</div>
		
	<script>
		const vueApp = new Vue({
 		 el: '#main',
 		 data: { 
		   searchbox: "",
		   display: 'redbox',
		   searchResults: [],
		   cart: [],
		  },
		methods: {
    	 search() {
			if(this.searchbox != ""){
				ajaxGet("/api/productSearch/" + this.searchbox + "/", (callbackResponse) => {
				this.searchResults = callbackResponse.data
				}); 
			}
			else{
				alert("Please write something in the search box before searching")
			}

			
    	  }
		}
	})
	</script>
</body>

</html>